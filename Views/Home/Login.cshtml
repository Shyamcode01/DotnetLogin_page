@model Login_user.Models.UserLogin

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<h4>UserLogin</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @if (TempData["error"]!=null)
        {
            <div class="text-danger">@TempData["error"]    </div>
        }
        <div class="text-success">

            @if (@TempData["dataAdd"] != null)
            {
                 @TempData["dataAdd"]
            }
        </div>
    
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
             
            <div class="form-group">
                <label asp-for="Gmail" class="control-label"></label>
                <input asp-for="Gmail" class="form-control" />
                <span asp-validation-for="Gmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <p>You are not register  <a asp-action="Register">sin up</a> </p>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
